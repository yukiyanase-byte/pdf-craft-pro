import React, { useState, useCallback, useRef, useEffect } from 'react';
import { 
  FileUp, 
  Trash2, 
  RotateCw, 
  Download, 
  Plus, 
  FileText,
  ChevronRight,
  Combine,
  Type,
  Square,
  Highlighter,
  Languages,
  Settings2,
  Zap,
  Layers,
  Search,
  CheckCircle2,
  AlertCircle,
  X
} from 'lucide-react';
import { motion, AnimatePresence, Reorder } from 'motion/react';
import { PDFService, type PDFPageInfo, type PDFFile, type Annotation } from './services/pdfService';
import { cn } from './lib/utils';

export default function App() {
  const [files, setFiles] = useState<Map<string, PDFFile>>(new Map());
  const [pages, setPages] = useState<PDFPageInfo[]>([]);
  const [isProcessing, setIsProcessing] = useState(false);
  const [processingMessage, setProcessingMessage] = useState('PDFを処理中...');
  const [watermark, setWatermark] = useState('');
  const [selectedPageId, setSelectedPageId] = useState<string | null>(null);
  const [ocrResult, setOcrResult] = useState<{ id: string, text: string } | null>(null);
  const fileInputRef = useRef<HTMLInputElement>(null);

  const handleFileUpload = async (event: React.ChangeEvent<HTMLInputElement>) => {
    const uploadedFiles = event.target.files;
    if (!uploadedFiles) return;

    setIsProcessing(true);
    setProcessingMessage('PDFを読み込み中...');
    try {
      const newFiles = new Map(files);
      const newPages: PDFPageInfo[] = [...pages];

      const filesArray = Array.from(uploadedFiles) as File[];
      for (const file of filesArray) {
        const fileId = Math.random().toString(36).substring(7);
        const arrayBuffer = await file.arrayBuffer();
        
        newFiles.set(fileId, {
          id: fileId,
          name: file.name,
          data: new Uint8Array(arrayBuffer),
        });

        const thumbnails = await PDFService.getPageThumbnails(file, fileId);
        newPages.push(...thumbnails);
      }

      setFiles(newFiles);
      setPages(newPages);
    } catch (error) {
      console.error('Error processing PDF:', error);
      alert('PDFの処理中にエラーが発生しました。');
    } finally {
      setIsProcessing(false);
      if (fileInputRef.current) fileInputRef.current.value = '';
    }
  };

  const removePage = (pageId: string) => {
    setPages(prev => prev.filter(p => p.id !== pageId));
  };

  const rotatePage = (pageId: string) => {
    setPages(prev => prev.map(p => 
      p.id === pageId ? { ...p, rotation: (p.rotation + 90) % 360 } : p
    ));
  };

  const runOCR = async (page: PDFPageInfo) => {
    setIsProcessing(true);
    setProcessingMessage('OCR実行中 (日本語・英語)...');
    try {
      const text = await PDFService.performOCR(page.thumbnailUrl);
      setOcrResult({ id: page.id, text });
    } catch (error) {
      console.error('OCR Error:', error);
      alert('OCR処理に失敗しました。');
    } finally {
      setIsProcessing(false);
    }
  };

  const addAnnotation = (pageId: string, type: Annotation['type']) => {
    setPages(prev => prev.map(p => {
      if (p.id !== pageId) return p;
      const newAnn: Annotation = {
        id: Math.random().toString(36).substr(2, 9),
        type,
        x: 10,
        y: 10,
        width: type === 'text' ? undefined : 20,
        height: type === 'text' ? undefined : 10,
        text: type === 'text' ? 'ここに入力' : undefined,
      };
      return { ...p, annotations: [...(p.annotations || []), newAnn] };
    }));
  };

  const handleDownload = async () => {
    if (pages.length === 0) return;
    setIsProcessing(true);
    setProcessingMessage('PDFを生成中...');
    try {
      const pdfBytes = await PDFService.generateModifiedPDF(files, pages, watermark);
      const blob = new Blob([pdfBytes], { type: 'application/pdf' });
      const url = URL.createObjectURL(blob);
      const link = document.createElement('a');
      link.href = url;
      link.download = 'edited_document.pdf';
      link.click();
      URL.revokeObjectURL(url);
    } catch (error) {
      console.error('Error generating PDF:', error);
      alert('PDFの生成中にエラーが発生しました。');
    } finally {
      setIsProcessing(false);
    }
  };

  const handleOptimize = async () => {
    if (pages.length === 0) return;
    setIsProcessing(true);
    setProcessingMessage('PDFを最適化中...');
    try {
      const pdfBytes = await PDFService.generateModifiedPDF(files, pages, watermark);
      const compressedBytes = await PDFService.compressPDF(pdfBytes);
      const blob = new Blob([compressedBytes], { type: 'application/pdf' });
      const url = URL.createObjectURL(blob);
      const link = document.createElement('a');
      link.href = url;
      link.download = 'optimized_document.pdf';
      link.click();
      URL.revokeObjectURL(url);
    } catch (error) {
      console.error('Optimization Error:', error);
      alert('最適化に失敗しました。');
    } finally {
      setIsProcessing(false);
    }
  };

  const clearAll = () => {
    if (confirm('すべてのページを消去しますか？')) {
      setFiles(new Map());
      setPages([]);
    }
  };

  return (
    <div className="min-h-screen bg-[#F3F4F6] text-[#111827] font-sans selection:bg-red-100">
      {/* Header */}
      <header className="sticky top-0 z-50 bg-white/90 backdrop-blur-xl border-b border-gray-200 px-8 py-4 flex items-center justify-between shadow-sm">
        <div className="flex items-center gap-4">
          <motion.div 
            whileHover={{ rotate: 5 }}
            className="w-12 h-12 bg-gradient-to-br from-red-500 to-red-700 rounded-2xl flex items-center justify-center shadow-lg shadow-red-200"
          >
            <FileText className="text-white w-7 h-7" />
          </motion.div>
          <div>
            <h1 className="text-2xl font-black tracking-tight bg-clip-text text-transparent bg-gradient-to-r from-gray-900 to-gray-600">PDF Craft Pro</h1>
            <p className="text-[10px] text-gray-400 font-bold uppercase tracking-[0.2em]">Advanced Batch Editor</p>
          </div>
        </div>

        <div className="flex items-center gap-4">
          {pages.length > 0 && (
            <button
              onClick={clearAll}
              className="px-4 py-2 text-sm font-bold text-gray-400 hover:text-red-600 transition-colors"
            >
              リセット
            </button>
          )}
          <button
            onClick={() => fileInputRef.current?.click()}
            className="flex items-center gap-2 bg-white border-2 border-gray-100 px-5 py-2.5 rounded-2xl text-sm font-bold hover:border-red-200 hover:bg-red-50 transition-all shadow-sm"
          >
            <Plus className="w-4 h-4 text-red-600" />
            PDFを追加
          </button>
          <button
            onClick={handleDownload}
            disabled={pages.length === 0 || isProcessing}
            className={cn(
              "flex items-center gap-3 bg-gray-900 text-white px-8 py-3 rounded-2xl text-sm font-bold transition-all shadow-xl shadow-gray-200 hover:scale-[1.02] active:scale-[0.98]",
              (pages.length === 0 || isProcessing) && "opacity-50 cursor-not-allowed shadow-none grayscale"
            )}
          >
            <Download className="w-4 h-4" />
            エクスポート
          </button>
        </div>
      </header>

      <div className="max-w-[1600px] mx-auto grid grid-cols-1 lg:grid-cols-[350px_1fr] gap-8 p-8">
        {/* Sidebar: Batch Tools & Settings */}
        <aside className="space-y-6">
          <div className="bg-white rounded-[32px] p-6 shadow-sm border border-gray-100">
            <div className="flex items-center gap-3 mb-6">
              <div className="p-2 bg-red-50 rounded-xl">
                <Zap className="w-5 h-5 text-red-600" />
              </div>
              <h2 className="font-black text-lg">一括処理設定</h2>
            </div>

            <div className="space-y-6">
              <div>
                <label className="text-[11px] font-black text-gray-400 uppercase tracking-wider block mb-2">透かし (Watermark)</label>
                <input 
                  type="text" 
                  value={watermark}
                  onChange={(e) => setWatermark(e.target.value)}
                  placeholder="例: 社外秘 / CONFIDENTIAL"
                  className="w-full bg-gray-50 border-2 border-transparent focus:border-red-200 focus:bg-white rounded-2xl px-4 py-3 text-sm font-medium outline-none transition-all"
                />
              </div>

              <div>
                <label className="text-[11px] font-black text-gray-400 uppercase tracking-wider block mb-2">バッチアクション</label>
                <div className="grid grid-cols-1 gap-2">
                  <button className="flex items-center justify-between w-full p-4 bg-gray-50 hover:bg-red-50 rounded-2xl transition-colors group">
                    <div className="flex items-center gap-3">
                      <Layers className="w-4 h-4 text-gray-400 group-hover:text-red-600" />
                      <span className="text-sm font-bold">全ページを統合</span>
                    </div>
                    <CheckCircle2 className="w-4 h-4 text-green-500" />
                  </button>
                  <button 
                    onClick={handleOptimize}
                    className="flex items-center justify-between w-full p-4 bg-gray-50 hover:bg-red-50 rounded-2xl transition-colors group"
                  >
                    <div className="flex items-center gap-3">
                      <Settings2 className="w-4 h-4 text-gray-400 group-hover:text-red-600" />
                      <span className="text-sm font-bold">PDFを最適化 (圧縮)</span>
                    </div>
                    <AlertCircle className="w-4 h-4 text-gray-300" />
                  </button>
                </div>
              </div>
            </div>
          </div>

          <div className="bg-gradient-to-br from-gray-900 to-gray-800 rounded-[32px] p-8 text-white shadow-2xl">
            <h3 className="text-xl font-black mb-4">Pro Tips</h3>
            <ul className="space-y-4 text-sm text-gray-300 font-medium">
              <li className="flex gap-3">
                <ChevronRight className="w-4 h-4 text-red-500 shrink-0" />
                OCR機能は日本語と英語の混合テキストに対応しています。
              </li>
              <li className="flex gap-3">
                <ChevronRight className="w-4 h-4 text-red-500 shrink-0" />
                注釈はドラッグして位置を調整できます。
              </li>
            </ul>
          </div>
        </aside>

        {/* Main Content: Page Grid */}
        <main>
          {pages.length === 0 ? (
            <div 
              className="h-[600px] flex flex-col items-center justify-center bg-white border-4 border-dashed border-gray-100 rounded-[48px] p-20 cursor-pointer hover:border-red-200 hover:bg-red-50/30 transition-all group"
              onClick={() => fileInputRef.current?.click()}
            >
              <div className="w-24 h-24 bg-red-50 rounded-full flex items-center justify-center mb-8 group-hover:scale-110 transition-transform shadow-inner">
                <FileUp className="text-red-600 w-12 h-12" />
              </div>
              <h2 className="text-3xl font-black mb-4">PDFをドロップ</h2>
              <p className="text-gray-400 font-bold max-w-sm text-center leading-relaxed">
                複数のファイルを選択して一括で編集できます。<br/>
                すべての処理はあなたのブラウザ内で行われます。
              </p>
            </div>
          ) : (
            <div className="space-y-8">
              <div className="flex items-center justify-between bg-white px-8 py-4 rounded-3xl shadow-sm border border-gray-100">
                <div className="flex items-center gap-8">
                  <div className="flex items-center gap-3">
                    <Combine className="w-5 h-5 text-red-600" />
                    <span className="text-lg font-black">{pages.length} <span className="text-sm text-gray-400 font-bold">PAGES</span></span>
                  </div>
                  <div className="h-6 w-px bg-gray-100" />
                  <div className="flex items-center gap-2 text-sm font-bold text-gray-400">
                    <Search className="w-4 h-4" />
                    <span>ドラッグして並べ替え</span>
                  </div>
                </div>
              </div>

              <Reorder.Group 
                axis="y" 
                values={pages} 
                onReorder={setPages}
                className="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-3 2xl:grid-cols-4 gap-8"
              >
                <AnimatePresence mode="popLayout">
                  {pages.map((page, index) => (
                    <Reorder.Item
                      key={page.id}
                      value={page}
                      initial={{ opacity: 0, y: 20 }}
                      animate={{ opacity: 1, y: 0 }}
                      exit={{ opacity: 0, scale: 0.9 }}
                      whileDrag={{ scale: 1.05, zIndex: 50, boxShadow: "0 20px 25px -5px rgb(0 0 0 / 0.1)" }}
                      className="relative group bg-white rounded-[32px] border border-gray-100 shadow-sm overflow-hidden hover:shadow-2xl hover:border-red-100 transition-all cursor-grab active:cursor-grabbing"
                    >
                      <div className="absolute top-4 left-4 z-10 bg-gray-900/80 backdrop-blur-md text-white text-[12px] font-black px-3 py-1 rounded-full shadow-lg">
                        {index + 1}
                      </div>
                      
                      <div className="aspect-[3/4] p-6 flex items-center justify-center bg-gray-50/50 relative">
                        <img 
                          src={page.thumbnailUrl} 
                          alt={`Page ${index + 1}`}
                          className="w-full h-full object-contain shadow-2xl rounded-sm transition-transform duration-500"
                          style={{ transform: `rotate(${page.rotation}deg)` }}
                        />
                        
                        {/* Annotation Previews */}
                        {page.annotations?.map(ann => (
                          <div 
                            key={ann.id}
                            className={cn(
                              "absolute pointer-events-none border-2 border-red-400 rounded-sm",
                              ann.type === 'highlight' && "bg-yellow-400/40 border-none"
                            )}
                            style={{ 
                              left: `${ann.x}%`, 
                              top: `${ann.y}%`,
                              width: ann.width ? `${ann.width}%` : 'auto',
                              height: ann.height ? `${ann.height}%` : 'auto',
                            }}
                          >
                            {ann.text && <span className="text-[8px] font-bold bg-white px-1 whitespace-nowrap">{ann.text}</span>}
                          </div>
                        ))}

                        {/* Quick Actions Overlay */}
                        <div className="absolute inset-0 bg-black/40 opacity-0 group-hover:opacity-100 transition-opacity flex flex-col items-center justify-center gap-3 backdrop-blur-[2px]">
                          <div className="flex gap-2">
                            <button 
                              onClick={(e) => { e.stopPropagation(); addAnnotation(page.id, 'text'); }}
                              className="w-10 h-10 bg-white rounded-xl flex items-center justify-center text-gray-900 hover:bg-red-500 hover:text-white transition-all shadow-lg"
                              title="テキスト追加"
                            >
                              <Type className="w-5 h-5" />
                            </button>
                            <button 
                              onClick={(e) => { e.stopPropagation(); addAnnotation(page.id, 'highlight'); }}
                              className="w-10 h-10 bg-white rounded-xl flex items-center justify-center text-gray-900 hover:bg-red-500 hover:text-white transition-all shadow-lg"
                              title="ハイライト"
                            >
                              <Highlighter className="w-5 h-5" />
                            </button>
                            <button 
                              onClick={(e) => { e.stopPropagation(); runOCR(page); }}
                              className="w-10 h-10 bg-white rounded-xl flex items-center justify-center text-gray-900 hover:bg-red-500 hover:text-white transition-all shadow-lg"
                              title="OCR実行"
                            >
                              <Languages className="w-5 h-5" />
                            </button>
                          </div>
                          <div className="flex gap-2">
                            <button 
                              onClick={(e) => { e.stopPropagation(); rotatePage(page.id); }}
                              className="w-10 h-10 bg-white/20 backdrop-blur-md rounded-xl flex items-center justify-center text-white hover:bg-white hover:text-gray-900 transition-all border border-white/30"
                            >
                              <RotateCw className="w-5 h-5" />
                            </button>
                            <button 
                              onClick={(e) => { e.stopPropagation(); removePage(page.id); }}
                              className="w-10 h-10 bg-red-500 rounded-xl flex items-center justify-center text-white hover:bg-red-600 transition-all shadow-lg"
                            >
                              <Trash2 className="w-5 h-5" />
                            </button>
                          </div>
                        </div>
                      </div>

                      <div className="p-5 bg-white">
                        <p className="text-[11px] text-gray-400 font-black uppercase tracking-wider truncate mb-1">{page.fileName}</p>
                        <div className="flex items-center gap-2">
                          {page.annotations && page.annotations.length > 0 && (
                            <span className="px-2 py-0.5 bg-red-50 text-red-600 text-[9px] font-black rounded-full">注釈あり</span>
                          )}
                          {ocrResult?.id === page.id && (
                            <span className="px-2 py-0.5 bg-green-50 text-green-600 text-[9px] font-black rounded-full">OCR済</span>
                          )}
                        </div>
                      </div>
                    </Reorder.Item>
                  ))}
                </AnimatePresence>
              </Reorder.Group>
            </div>
          )}
        </main>
      </div>

      {/* OCR Result Modal */}
      <AnimatePresence>
        {ocrResult && (
          <motion.div
            initial={{ opacity: 0 }}
            animate={{ opacity: 1 }}
            exit={{ opacity: 0 }}
            className="fixed inset-0 z-[100] bg-gray-900/60 backdrop-blur-md flex items-center justify-center p-8"
          >
            <motion.div 
              initial={{ scale: 0.9, y: 20 }}
              animate={{ scale: 1, y: 0 }}
              className="bg-white w-full max-w-2xl rounded-[40px] overflow-hidden shadow-2xl"
            >
              <div className="p-8 border-b border-gray-100 flex items-center justify-between">
                <div className="flex items-center gap-3">
                  <Languages className="w-6 h-6 text-red-600" />
                  <h3 className="text-xl font-black">OCR 認識結果</h3>
                </div>
                <button onClick={() => setOcrResult(null)} className="p-2 hover:bg-gray-100 rounded-full transition-colors">
                  <X className="w-6 h-6" />
                </button>
              </div>
              <div className="p-8">
                <textarea 
                  readOnly
                  value={ocrResult.text}
                  className="w-full h-64 bg-gray-50 rounded-3xl p-6 text-sm font-medium leading-relaxed outline-none resize-none"
                />
                <div className="mt-6 flex justify-end gap-3">
                  <button 
                    onClick={() => {
                      navigator.clipboard.writeText(ocrResult.text);
                      alert('コピーしました');
                    }}
                    className="px-6 py-3 bg-gray-900 text-white rounded-2xl font-bold text-sm hover:scale-105 transition-transform"
                  >
                    テキストをコピー
                  </button>
                </div>
              </div>
            </motion.div>
          </motion.div>
        )}
      </AnimatePresence>

      <input
        type="file"
        ref={fileInputRef}
        onChange={handleFileUpload}
        accept="application/pdf"
        multiple
        className="hidden"
      />

      {/* Processing Overlay */}
      <AnimatePresence>
        {isProcessing && (
          <motion.div
            initial={{ opacity: 0 }}
            animate={{ opacity: 1 }}
            exit={{ opacity: 0 }}
            className="fixed inset-0 z-[200] bg-white/90 backdrop-blur-xl flex flex-col items-center justify-center"
          >
            <div className="relative">
              <div className="w-24 h-24 border-8 border-red-100 border-t-red-600 rounded-full animate-spin" />
              <div className="absolute inset-0 flex items-center justify-center">
                <Zap className="w-8 h-8 text-red-600 animate-pulse" />
              </div>
            </div>
            <p className="mt-8 text-2xl font-black text-gray-900 tracking-tight">{processingMessage}</p>
            <p className="mt-2 text-sm text-gray-400 font-bold uppercase tracking-widest">Please stay on this tab</p>
          </motion.div>
        )}
      </AnimatePresence>
    </div>
  );
}
